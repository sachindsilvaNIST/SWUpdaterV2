<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@android:color/white"
    android:padding="24dp">

<!--    SMALL ICON AT THE TOP : CHECKMARK / SYSTEM INFO ICON -->
    <ImageView
        android:id="@+id/imageViewCheckMark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_menu_info_details"
        android:layout_marginBottom="5dp"
        android:background="@null"
        android:layout_marginTop="90dp"
        />

<!--    MAIN TITLE AND LABEL -->

    <TextView
        android:id="@+id/mSystemUpToDateMainTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The system is up to date"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="#333"
        android:layout_marginBottom="7dp"
        />

<!--    SUBTITLE OR OTHER INFO TEXTS -->
    <TextView
        android:id="@+id/textViewSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your device is already on the latest version!"
        android:textSize="16sp"
        android:textColor="#666"
        android:layout_marginBottom="32dp"
        />

<!--    LAST CHECKED LINE   -->
    <TextView
        android:id="@+id/textViewLastChecked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Last checked: --"
        android:textSize="14sp"
        android:textColor="#999"
        android:layout_marginBottom="24dp"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:background="@android:color/white"

        >

        <!--    "RECHECK" BUTTON -->
        <Button
            android:id="@+id/mSystemUpToDateReCheckButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Verify Again"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:layout_marginBottom="20dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:textColor="#ffffff"
            android:background="@null"
            android:shadowRadius="@android:integer/config_longAnimTime"
            android:layout_marginRight="20dp"
            />
        <!--    "USB DISCONNECT BUTTON" BUTTON -->
        <Button
            android:id="@+id/mSystemUpToDateUSBDisconnectButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Disconnect USB"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:layout_marginBottom="20dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:textColor="#ffffff"
            android:background="@null"
            android:shadowRadius="@android:integer/config_longAnimTime"
            />
    </LinearLayout>




</LinearLayout>


















