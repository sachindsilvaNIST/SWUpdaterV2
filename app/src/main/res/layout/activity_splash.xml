<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/nidecgreen"
    tools:context="com.nidec.swupdater.v2.ui.EntrySplashActivity"
    >

<!--    SWUpdater Splash Screen APP Logo -->
    <ImageView
        android:id="@+id/mAppLogo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="56dp"
        android:contentDescription="@string/icon_name"
        android:src="@drawable/ic_launcher_foreground"
        app:layout_constraintBottom_toTopOf="@+id/mAppName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.499"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintVertical_chainStyle="packed" />

    <!-- SWUpdater SplashScreen AppName with TagLine -->
    <TextView
        android:id="@+id/mAppName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/fontinterlight"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.499"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mAppLogo"
        android:layout_marginTop="5dp"
        />

<!--    SWUpdater SplashScreen Progress / Loading Spinner -->
    <ProgressBar
        android:id="@+id/mLoadingSpinner"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        style="?android:attr/progressDrawable"
        android:indeterminate="true"
        app:layout_constraintTop_toBottomOf="@+id/mAppName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"
        android:indeterminateTintMode="src_atop"
        android:indeterminateTint="@color/white"
        />
</androidx.constraintlayout.widget.ConstraintLayout>