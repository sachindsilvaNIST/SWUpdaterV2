<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context="com.nidec.swupdater.v2.ui.MainActivity"
    >

<!--    Sample header text -->
    <TextView
        android:id="@+id/mTextViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NIDEC - OTA Installer lorem20"
        android:textStyle="italic"
        android:textSize="24sp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@+id/mApplyButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        />


<!--    APPLY Button -->
    <Button
        android:id="@+id/mApplyButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Apply Update"
        app:layout_constraintBottom_toTopOf="@+id/mViewConfigButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        />


    <!--    ViewConfig Button -->

    <Button
        android:id="@+id/mViewConfigButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Config"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>